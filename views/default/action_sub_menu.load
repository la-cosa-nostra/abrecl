<span class="volver_sub_action badge"><i class="glyphicon glyphicon-chevron-left"></i>Volver</span>
<ul class="list-group opciones">
    {{for opcion in opciones:}}
    <li class="list-group-item">
        <span class="badge"><i class="glyphicon glyphicon-chevron-right"></i></span>
        {{=opcion}}
    </li>
    {{pass}}
</ul>

<script>
    var action = '{{=action}}';
    $(document).ready(function(){
        $("#actions").hide();
        $("#loader").hide();
        $("#direccion b").append($("<span/>").attr('id','brand-sub-action').html(' / '+action));
    });
</script>
